{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    /* "javascript", */
    "graphql",
    "html",
    "html.eex",
    "yaml",
    "json",
    "python",
    "c",
    //"cpp",
    "c++"
  ],
  // Disabled: File is a CommonJS module; it may be converted to an ES6 module.
  "javascript.suggestionActions.enabled": false,
  // python config
  "python.linting.enabled": true,
  "jedi.executable.command": "jedi-language-server",
  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  // clangd
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "explorer.file.showHiddenFiles": true,
  // html config
  "html.experimental.custom.tags": [],
  // elixir config
  "elixirLS.mixEnv": "test",
  "elixirLS.mixTarget": "dev",
  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh"
}
